doctype html
html(lang="en")
  head
    //- page specific vars
    block vars
    //- header stuff
    block header
      meta(charset = "utf-8")
      title #{page.title}
      meta(name = "description", content = page.description)
      meta(name = "viewport", content = "width=device-width, initial-scale=1")
      link(rel='stylesheet', href='styles/style.css')
  body
    img(src="images/express.png", width="200", height="61")
    //- actual content
    block content
    //- common stuff
    block footer
      script(src='js/script.js')
